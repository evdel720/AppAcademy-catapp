<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>
  </head>
  <body>
    <h1><%= @cat.name %></h1>
    <table>
      <tr>
        <td>Birth date: </td>
        <td><%= @cat.birth_date %></td>
      </tr>
      <tr>
        <td>Age: </td>
        <td><%= @cat.age %></td>
      </tr>
      <tr>
        <td>Color: </td>
        <td><%= @cat.color %></td>
      </tr>
      <tr>
        <td>Sex: </td>
        <td><%= @cat.sex %></td>
      </tr>
      <tr>
        <td>Description: </td>
        <td><%= @cat.description %></td>
      </tr>
    </table>
    <%= button_to 'Edit the cat', edit_cat_url(@cat), method: :get %>
  </body>
</html>
